{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/index.test.js",
            "args": [
                // "--testIDs=2",
                // "--timeout=10000",
                // "--bail",
                // "--json",
                // "--raw",
                // "--silent",
                // "--help",
                // "--workers",
            ],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}"
        }
    ]
}